{
  "activate_on_close": "neighbour",
  "buffer_font_family": "Iosevka",
  "buffer_font_size": 18,
  "indent_guides": {
    "enabled": false
  },
  "journal": {
    "hour_format": "hour24"
  },
  "scrollbar": {
    "show": "always"
  },
  "tab_size": 2,
  "terminal": {
    "line_height": "standard"
  },
  "theme": {
    "mode": "dark",
    "light": "Solarized Light",
    "dark": "Solarized Dark"
  },
  "use_autoclose": false,
  "vim_mode": true
}
