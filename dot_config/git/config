[alias]
	ap  = add --patch
	cp  = cherry-pick
	g   = grep -n
	gi  = grep -ni
	git = !git $1
	re  = "!f() { git rh $1; git c- $1; }; f"
	rh  = reset HEAD
	ri  = "!f() { git rebase -i HEAD~$*; }; f"

[clean]
	requireForce = false

[core]
	autocrlf = false
	editor = hx
	whitespace = trailing-space,space-before-tab

[init]
	defaultBranch = main

[log]
	date = iso

[push]
	autoSetupRemote = true

[user]
	name = Henry Catalini Smith
	email = henry@catalinismith.se
