[alias]
	a    = add
	ap   = add --patch
	b    = branch --verbose
	ba   = branch --all
	c    = "!f() { git commit -am \"$*\"; }; f"
	ci   = "!f() { git commit -m \"$*\"; }; f"
	cia  = commit --amend
	co   = checkout
	cow  = "!f() { cowsay \"$*\" | git commit -a -F -; }; f"
	c-   = checkout --
	cp   = cherry-pick
	d    = diff
	dc   = diff --cached
	g    = grep -n
	gi   = grep -ni
	git  = !git $1
	l    = log --graph --stat --decorate
	lod  = log --oneline --decorate
	lodg = log --oneline --decorate --graph
	m    = merge
	re   = "!f() { git rh $1; git c- $1; }; f"
	rh   = reset HEAD
	ri   = "!f() { git rebase -i HEAD~$*; }; f"
	s    = status --short --branch
	up   = "!git remote update -p; git merge --ff-only @{u}"

[clean]
	requireForce = false

[color]
	branch   = true
	diff     = true
	decorate = true
	grep     = true
	pager    = true
	status   = true

[color "branch"]
	current = magenta reverse
	local = magenta
	remote = yellow

[color "decorate"]
	commit       = cyan
	branch       = magenta
	remotebranch = magenta bold
	tag          = red
	stash        = yellow
	HEAD         = cyan

[color "diff"]
	frag       = magenta
	meta       = white
	new        = green bold
	old        = red bold
	whitespace = white reverse

[color "grep"]
	filename   = blue
	linenumber = green
	match      = magenta bold
	separator  = cyan

[color "status"]
	branch    = magenta
	header    = blue
	added     = magenta
	changed   = magenta
	untracked = cyan

[core]
	autocrlf = false
	editor = nvim
	whitespace = trailing-space,space-before-tab

[init]
	defaultBranch = main

[log]
	date = iso

