[alias]
	a    = add
	ap   = add --patch
	b    = branch --verbose
	ba   = branch --all
	bc   = branch --contains
	br   = branch --remote
	c    = "!f() { git commit -am \"$*\"; }; f"
	ci   = "!f() { git commit -m \"$*\"; }; f"
	cia  = commit --amend
	co   = checkout
	c-   = checkout --
	cp   = cherry-pick
	d    = diff
	dc   = diff --cached
	g    = grep -n
	gi   = grep -ni
	git  = !git $1
	ig   = ls-files --others -i --exclude-standard
	l    = log --graph --stat --decorate
	lod  = log --oneline --decorate
	lodg = log --oneline --decorate --graph
	m    = merge
	re   = "!f() { git rh $1; git c- $1; }; f"
	rh   = reset HEAD
	s    = status --short --branch
	up   = "!git remote update -p; git merge --ff-only @{u}"

[core]
	autocrlf = false
	editor = vim
	pager = delta
	whitespace = trailing-space,space-before-tab

[clean]
	requireForce = false

[color]
	branch   = true
	diff     = true
	decorate = true
	grep     = true
	pager    = true
	status   = true

[color "branch"]
	current = magenta reverse
	local = magenta
	remote = yellow

[color "decorate"]
	commit       = cyan
	branch       = magenta
	remotebranch = magenta bold
	tag          = red
	stash        = yellow
	HEAD         = cyan

[color "diff"]
	frag       = magenta
	meta       = white
	new        = green bold
	old        = red bold
	whitespace = white reverse

[color "grep"]
	filename   = blue
	linenumber = green
	match      = magenta bold
	separator  = cyan

[color "status"]
	branch    = magenta
	header    = blue
	added     = magenta
	changed   = magenta
	untracked = cyan

[user]
	name = Henry Catalini Smith
	email = hen@hey.com

[delta]
	features = side-by-side line-numbers decorations
	syntax-theme = Dracula
	plus-style = syntax "#003800"
	minus-style = syntax "#3f0001"

[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
	hunk-header-decoration-style = cyan box ul

[delta "line-numbers"]
	line-numbers-left-style = cyan
	line-numbers-right-style = cyan
	line-numbers-minus-style = 124
	line-numbers-plus-style = 28
